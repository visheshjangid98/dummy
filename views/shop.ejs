<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store - Trace MC</title>
    <link rel="icon" type="image/png" href="media/favicon.png">
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/store.css">
  </head>
  <body>
    <%- include('components/navbar', { user: typeof user !== 'undefined' ? user : null }) %>

    <main class="main-content">
      <!-- Hero Section -->
      <section class="hero">
        <div class="hero-container">
          <h1 class="hero-title">
            <span class="hero-accent">Store</span>
          </h1>
          <p class="hero-description">
            Enhance your gameplay with premium ranks and coins
          </p>
        </div>
      </section>

      <!-- Store Section -->
      <section class="store-section">
        <div class="container">
          <div class="store-tabs">
            <button class="store-tab active" data-tab="ranks" onclick="switchTab('ranks')">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z"></path>
              </svg>
              Ranks
            </button>
            <button class="store-tab" data-tab="coins" onclick="switchTab('coins')">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
              Coins
            </button>
          </div>

          <div class="store-content">
            <div class="store-section active" id="ranks-section">
              <div class="store-grid">
                <%- ranks %>
              </div>
            </div>

            <div class="store-section" id="coins-section">
              <div class="store-grid">
                <%- coin %>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-brand">
            <img src="media/logo_small.png" alt="Trace MC" class="footer-logo">
            <p class="footer-description">The ultimate Minecraft server experience.</p>
          </div>
          <div class="footer-links">
            <div class="footer-section">
              <h4 class="footer-title">Server</h4>
              <a href="/" class="footer-link">Home</a>
              <a href="/store" class="footer-link">Store</a>
              <a href="/support" class="footer-link">Support</a>
            </div>
            <div class="footer-section">
              <h4 class="footer-title">Community</h4>
              <a href="/discord" class="footer-link">Discord</a>
              <a href="#about" class="footer-link">Team</a>
              <a href="#features" class="footer-link">Features</a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2024 Trace MC. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      function switchTab(tabName) {
        // Update tab buttons
        document.querySelectorAll('.store-tab').forEach(tab => {
          tab.classList.remove('active');
        });
        document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');

        // Update content sections
        document.querySelectorAll('.store-section').forEach(section => {
          section.classList.remove('active');
        });
        document.getElementById(`${tabName}-section`).classList.add('active');
      }

      function redi(value) {
        window.location.href = `/store/product?product_id=${value}`;
      }

      function buy(value) {
        window.location.href = `/purchase?product=${value}`;
      }
    </script>
  </body>
</html>