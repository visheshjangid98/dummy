<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trace Mc</title>
    <link rel="icon" type="image/png" href="media/favicon.png">
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/home.css">
</head>
<body>
    <%- include('components/navbar', { user: typeof user !== 'undefined' ? user : null }) %>
    
    <main class="main-content">
      <!-- Hero Section -->
      <section class="hero">
        <div class="hero-container">
          <div class="hero-logo">
            <img src="media/logo.png" alt="Trace MC" class="hero-logo-img">
          </div>
          <h1 class="hero-title">
            Minecraft, like <span class="hero-accent">never before</span>.
          </h1>
          <p class="hero-description">
            Experience the ultimate Minecraft server with custom features, ranks, and an amazing community.
          </p>
          <div class="hero-server">
            <div class="server-info" onclick="copyServerIP()">
              <div class="server-ip"><%= server %></div>
              <div class="server-label">Click to copy</div>
            </div>
          </div>
          <div class="hero-actions">
            <a href="#features" class="btn btn-primary hero-btn">Explore Features</a>
            <a href="/store" class="btn btn-outline hero-btn">Visit Store</a>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section id="features" class="features">
        <div class="container">
          <h2 class="section-title">What We Offer</h2>
          <div class="features-grid">
            <div class="feature-card">
              <div class="feature-icon">
                <img src="media/features/cracked.webp" alt="Cracked Support">
              </div>
              <h3 class="feature-title">Cracked Support</h3>
              <p class="feature-description">Join with cracked accounts - no premium required!</p>
            </div>
            <div class="feature-card">
              <div class="feature-icon">
                <img src="media/features/java-bedrock.png" alt="Cross Platform">
              </div>
              <h3 class="feature-title">Cross Platform</h3>
              <p class="feature-description">Play on both Java and Bedrock editions seamlessly.</p>
            </div>
            <div class="feature-card">
              <div class="feature-icon">
                <img src="media/features/lifesteal.webp" alt="Lifesteal">
              </div>
              <h3 class="feature-title">Lifesteal</h3>
              <p class="feature-description">Steal hearts from your enemies in epic battles.</p>
            </div>
            <div class="feature-card">
              <div class="feature-icon">
                <img src="media/features/magic.jpg" alt="Bending">
              </div>
              <h3 class="feature-title">Elemental Bending</h3>
              <p class="feature-description">Master the elements with our custom bending system.</p>
            </div>
            <div class="feature-card">
              <div class="feature-icon">
                <img src="media/features/ranks.jpg" alt="Custom Ranks">
              </div>
              <h3 class="feature-title">Custom Ranks</h3>
              <p class="feature-description">Unlock unique ranks with special perks and abilities.</p>
            </div>
            <div class="feature-card">
              <div class="feature-icon">
                <img src="media/features/money.png" alt="Economy">
              </div>
              <h3 class="feature-title">Economy System</h3>
              <p class="feature-description">Trade, earn, and spend in our balanced economy.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Discord Section -->
      <section id="discord" class="discord">
        <div class="container">
          <div class="discord-content">
            <div class="discord-info">
              <h2 class="section-title">Join Our Community</h2>
              <div class="discord-features">
                <div class="discord-feature">
                  <svg class="discord-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-2-2V10a2 2 0 012-2h8z"></path>
                  </svg>
                  <span>Chat with other players</span>
                </div>
                <div class="discord-feature">
                  <svg class="discord-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>Get support and updates</span>
                </div>
                <div class="discord-feature">
                  <svg class="discord-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                  </svg>
                  <span>Participate in events</span>
                </div>
              </div>
              <a href="/discord" class="btn btn-primary">Join Discord</a>
            </div>
            <div class="discord-banner">
              <img src="<%= banner %>" alt="Discord Banner" class="discord-banner-img">
            </div>
          </div>
        </div>
      </section>

      <!-- Team Section -->
      <section id="about" class="team">
        <div class="container">
          <h2 class="section-title">Meet Our Team</h2>
          <div class="team-grid">
            <div class="team-member">
              <div class="team-avatar">
                <img src="media/profile/owner.jpg" alt="Vrizz">
              </div>
              <div class="team-info">
                <h3 class="team-name">Vrizz</h3>
                <div class="team-role owner">Owner</div>
                <p class="team-description">Founder and lead developer of Trace MC. Passionate about creating the best Minecraft experience.</p>
              </div>
            </div>
            <div class="team-member">
              <div class="team-avatar">
                <img src="media/profile/owner2.jpg" alt="Erlik">
              </div>
              <div class="team-info">
                <h3 class="team-name">Erlik</h3>
                <div class="team-role owner">Owner</div>
                <p class="team-description">Co-founder focused on community management and server operations.</p>
              </div>
            </div>
            <div class="team-member">
              <div class="team-avatar">
                <img src="media/profile/coowner.png" alt="AnupGamer">
              </div>
              <div class="team-info">
                <h3 class="team-name">AnupGamer</h3>
                <div class="team-role co-owner">Co-Owner</div>
                <p class="team-description">Experienced administrator helping shape the server's future.</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Join Section -->
      <section id="join" class="join">
        <div class="container">
          <h2 class="section-title">How to Join</h2>
          <div class="join-grid">
            <div class="join-card">
              <h3 class="join-title">Java Edition</h3>
              <div class="join-details">
                <div class="join-detail">
                  <span class="join-label">Server IP:</span>
                  <span class="join-value"><%= server %></span>
                </div>
                <div class="join-detail">
                  <span class="join-label">Version:</span>
                  <span class="join-value">1.21.1</span>
                </div>
              </div>
            </div>
            <div class="join-card">
              <h3 class="join-title">Bedrock Edition</h3>
              <div class="join-details">
                <div class="join-detail">
                  <span class="join-label">Server IP:</span>
                  <span class="join-value"><%= server %></span>
                </div>
                <div class="join-detail">
                  <span class="join-label">Port:</span>
                  <span class="join-value"><%= port %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-brand">
            <img src="media/logo_small.png" alt="Trace MC" class="footer-logo">
            <p class="footer-description">The ultimate Minecraft server experience.</p>
          </div>
          <div class="footer-links">
            <div class="footer-section">
              <h4 class="footer-title">Server</h4>
              <a href="/store" class="footer-link">Store</a>
              <a href="/support" class="footer-link">Support</a>
              <a href="#join" class="footer-link">How to Join</a>
            </div>
            <div class="footer-section">
              <h4 class="footer-title">Community</h4>
              <a href="/discord" class="footer-link">Discord</a>
              <a href="#about" class="footer-link">Team</a>
              <a href="#features" class="footer-link">Features</a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2024 Trace MC. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      function copyServerIP() {
        const serverIP = '<%= server %>';
        navigator.clipboard.writeText(serverIP).then(() => {
          // Show success message
          const serverInfo = document.querySelector('.server-info');
          const originalContent = serverInfo.innerHTML;
          serverInfo.innerHTML = '<div class="server-ip">Copied!</div><div class="server-label">Server IP copied to clipboard</div>';
          serverInfo.style.background = 'var(--accent-gradient)';
          
          setTimeout(() => {
            serverInfo.innerHTML = originalContent;
            serverInfo.style.background = '';
          }, 2000);
        });
      }
    </script>
  </body>
</html>
